<link rel="stylesheet" href="../public/css/preguntasReportadas.css">
<table class="ranking">
    <thead>
    <tr>
        <th>Pregunta</th>
        <th>Respuestas</th>
    </tr>
    </thead>
    <tbody>
    {{#preguntasNuevas}}
        <tr>
            <td>{{enunciado}}</td>
            <td>{{categoria}}</td>
    {{/preguntasNuevas}}
    {{#respuestasNuevas}}
            <td>{{texto}}</td>
        </tr>
            <form action="/home/eliminarAgregarNuevas" method="POST">
                <input type="hidden" name="pregunta_id" value="{{id_pregunta}}">
                <td><button type="submit" name="eliminar" value="eliminar" class="boton-activo">Eliminar</button></td>
                <td><button type="submit" name="agregar" value="agregar" class="boton-activo">Agregar</button></td>
            </form>
        </tr>
    {{/respuestasNuevas}}

    </tbody>
</table>