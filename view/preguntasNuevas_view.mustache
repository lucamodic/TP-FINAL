<link rel="stylesheet" href="../public/css/preguntasReportadas.css">
<table class="ranking">
    <thead>
    <tr>
        <th>Pregunta</th>
        <th>Respuestas</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#preguntasNuevas}}
        <tr>
            <td>{{enunciado}}</td>
            <td>
                {{#respuestasNuevas}}
                    <p>{{texto}}</p>
                {{/respuestasNuevas}}
            </td>
            <form action="/home/eliminarAgregarNuevas" method="POST">
                <input type="hidden" name="pregunta_id" value="{{id}}">
                <td><button type="submit" name="eliminar" value="eliminar" class="boton2">Eliminar</button></td>
                <td><button type="submit" name="agregar" value="agregar" class="boton2">Agregar</button></td>
            </form>
        </tr>
    {{/preguntasNuevas}}

    </tbody>
</table>
<table class="ranking">
    <thead>
    <tr>
        <th>Categorias</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#categoriasNuevas}}
        <tr>
            <td>{{nombre}}</td>
            <td></td>
            <form action="/home/eliminarAgregarNuevasCategorias" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <td><button type="submit" name="eliminar" value="eliminar" class="boton2">Eliminar</button></td>
                <td><button type="submit" name="agregar" value="agregar" class="boton2">Agregar</button></td>
            </form>
        </tr>
    {{/categoriasNuevas}}

    </tbody>
</table>