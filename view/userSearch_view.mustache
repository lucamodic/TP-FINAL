<link rel="stylesheet" href="../public/css/perfil.css">
<div class="usuario-entero">
    <div class="usuario">
        <img class="img-usuario" src="../{{imagenBuscado}}" alt="" >
        {{#editar}}
            <form action="/user/cambiarImagen" method="post">
                <label for="file-upload" class="custom-file-upload">
                    <i class="fa fa-cloud-upload"></i> Subir Archivo
                </label>
                <input id="file-upload" type="file" style="display:none;" name="imagen" >
                <button type="submit" class="boton-activo">cambiar imagen</button>
            </form>
        {{/editar}}
        <h3>USERNAME: {{usernameBuscado}}</h3>
        <p>PUNTAJE: {{puntaje}}</p>
        <p>PARTIDAS JUGADAS: {{partidasRealizadas}}</p>
        <div id="mapa" style="height:400px;"></div>
        <input type="hidden" name="latitud" id="latitud" value="{{latitud}}">
        <input type="hidden" name="longitud" id="longitud" value="{{longitud}}">
    </div>

</div>
<script>
    var lat = parseFloat(document.getElementById("latitud").value);
    var lng = parseFloat(document.getElementById("longitud").value);
    function initMap() {
        var mapOptions = {
            center: new google.maps.LatLng(lat, lng),
            zoom: 12,
            panControl: false,
            zoomControl: false,
            scaleControl: false,
            mapTypeControl: false,
            streetViewControl: true,
            overviewMapControl: true,
            rotateControl: true,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };


        let map = new google.maps.Map(document.getElementById("mapa"), mapOptions);
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(lat, lng),
            map: map,
            draggable: true
        });
    }
</script>